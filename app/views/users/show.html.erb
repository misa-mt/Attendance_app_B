<% provide(:title, @user.name) %>
<h1>ユーザー情報</h1>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>